---
interface Props{
    title: string;
    author?: string;
    imageUrl?: string;
}
const { title, author, imageUrl } = Astro.props;
---

<main>
    <h1 class="main-title">{title}</h1>
    <p>{author}</p>
</main>

<style>
    main {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 20vh;
        width: 100%;
        position: relative; /* Establece una posici√≥n relativa en el div padre */
        overflow: hidden; /* Oculta el desbordamiento de la imagen */
        background: linear-gradient(90deg, #82DCA1 0%, #0D781E 100%); /* Fondo lineal predeterminado */
    }

    .main-title {
        font-size: 1.5rem;
        font-family: 'Raleway', sans-serif;
        color: white;
        font-weight: 800;
        text-align: center;
    }
</style>
